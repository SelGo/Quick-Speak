<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="selgo.com.quickspeak.TopLevelActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/InstructionTextStyle"
        android:text="@string/language_choice"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/english_image"
            android:src="@mipmap/english_flag"
            style="@style/EnglishLanguageItemStyle"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="90dp" />

        <TextView
            android:id="@+id/english_name"
            style="@style/EnglishLanguageItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/english_language" />
    </LinearLayout>

</LinearLayout>
